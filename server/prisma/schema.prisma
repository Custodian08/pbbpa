generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Domain Models ---

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  fullName     String?
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  roles        UserRole[]
  auditLogs    AuditLog[]
}

model Role {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  users UserRole[]
}

model UserRole {
  userId     String
  roleId     Int
  assignedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role       Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

enum PremiseTypeE {
  OFFICE
  RETAIL
  WAREHOUSE
}

enum RateType {
  M2
  FIXED
}

enum PremiseStatus {
  FREE
  RENTED
  RESERVED
}

model Premise {
  id            String        @id @default(uuid())
  code          String?       @unique
  type          PremiseTypeE
  address       String
  floor         Int?
  area          Decimal       @db.Decimal(10, 2)
  rateType      RateType
  baseRate      Decimal?      @db.Decimal(12, 2)
  status        PremiseStatus @default(FREE)
  availableFrom DateTime?
  leases        Lease[]
  reservations  Reservation[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum TenantType {
  LEGAL
  INDIVIDUAL
}

model Tenant {
  id          String     @id @default(uuid())
  type        TenantType
  name        String
  unp         String     @unique
  email       String?
  phone       String?
  bankAccount String?
  address     String?
  leases      Lease[]
  payments    Payment[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum LeaseStatus {
  DRAFT
  ACTIVE
  TERMINATING
  CLOSED
}

model Lease {
  id                String       @id @default(uuid())
  number            String?      @unique
  date              DateTime?
  periodFrom        DateTime
  periodTo          DateTime?
  premiseId         String
  tenantId          String
  base              RateType
  currency          String       @default("BYN")
  vatRate           Decimal      @default(20) @db.Decimal(5, 2)
  deposit           Decimal?     @db.Decimal(12, 2)
  dueDay            Int
  penaltyRatePerDay Decimal      @default(0.1) @db.Decimal(5, 3)
  status            LeaseStatus  @default(DRAFT)
  premise           Premise      @relation(fields: [premiseId], references: [id])
  tenant            Tenant       @relation(fields: [tenantId], references: [id])
  indexations       Indexation[]
  accruals          Accrual[]
  penalties         Penalty[]
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}

model Indexation {
  id            String   @id @default(uuid())
  leaseId       String
  factor        Decimal  @db.Decimal(8, 4)
  effectiveFrom DateTime
  lease         Lease    @relation(fields: [leaseId], references: [id])
  createdAt     DateTime @default(now())
}

model Accrual {
  id         String   @id @default(uuid())
  leaseId    String
  period     DateTime
  baseAmount Decimal  @db.Decimal(12, 2)
  vatAmount  Decimal  @db.Decimal(12, 2)
  total      Decimal  @db.Decimal(12, 2)
  lease      Lease    @relation(fields: [leaseId], references: [id])
  invoice    Invoice?
  createdAt  DateTime @default(now())

  @@unique([leaseId, period])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  PARTIALLY_PAID
  OVERDUE
  CANCELLED
}

model Invoice {
  id        String        @id @default(uuid())
  accrualId String        @unique
  number    String
  date      DateTime
  status    InvoiceStatus
  accrual   Accrual       @relation(fields: [accrualId], references: [id])
  payments  Payment[]
  createdAt DateTime      @default(now())
}

enum PaymentStatus {
  PENDING
  APPLIED
  UNRESOLVED
  REFUNDED
}

enum PaymentSource {
  IMPORT
  MANUAL
}

model Payment {
  id              String        @id @default(uuid())
  tenantId        String
  amount          Decimal       @db.Decimal(12, 2)
  date            DateTime
  linkedInvoiceId String?
  status          PaymentStatus
  source          PaymentSource
  tenant          Tenant        @relation(fields: [tenantId], references: [id])
  linkedInvoice   Invoice?      @relation(fields: [linkedInvoiceId], references: [id])
  createdAt       DateTime      @default(now())
}

model Penalty {
  id         String   @id @default(uuid())
  leaseId    String
  periodFrom DateTime
  periodTo   DateTime
  base       Decimal  @db.Decimal(12, 2)
  ratePerDay Decimal  @db.Decimal(6, 3)
  amount     Decimal  @db.Decimal(12, 2)
  lease      Lease    @relation(fields: [leaseId], references: [id])
  createdAt  DateTime @default(now())
}

enum ReservationStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

model Reservation {
  id        String            @id @default(uuid())
  premiseId String
  until     DateTime
  status    ReservationStatus
  premise   Premise           @relation(fields: [premiseId], references: [id])
  createdAt DateTime          @default(now())
}

model VatSetting {
  id        Int      @id @default(autoincrement())
  rate      Decimal  @db.Decimal(5, 2)
  validFrom DateTime
  createdAt DateTime @default(now())

  @@unique([rate, validFrom])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  method    String
  path      String
  entity    String?
  entityId  String?
  meta      Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}
